{
  "name": "bitrix-expert/monolog-adapter",
  "description": "Monolog adapter for Bitrix CMS",
  "keywords": ["bitrix", "monolog", "logger", "log", "psr-3"],
  "type": "library",
  "license": "MIT",
  "support": {
    "issues": "https://github.com/bitrix-expert/monolog-adapter/issues",
    "source": "https://github.com/bitrix-expert/monolog-adapter/"
  },
  "authors": [
    {
      "name": "Nik Samokhvalov",
      "email": "nik@samokhvalov.info"
    }
  ],
  "require": {
    "php": ">=8.1",
    "monolog/monolog": "3",
    "theorchard/monolog-cascade": "dev-master"
  },
  "autoload": {
    "psr-4": {"Bex\\Monolog\\": "src/"},
    "files": ["src/bootstrap.php"]
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/egorzot/monolog-cascade.git"
    }
  ]
